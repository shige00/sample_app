<div class="new-edit-container">
  <h2 class="howto-title">ログイン</h2>
  <div class="form">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, "Eメール", class:"text" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text-title" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class:"text" %><br />
        <%= f.password_field :password, autocomplete: "current-password" , class:"text-title"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログインしたままにする" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>