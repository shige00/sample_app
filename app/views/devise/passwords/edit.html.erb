<div class="new-edit-container">
  <h2>パスワード再設定</h2>
  <p>パスワードを再設定します。<br>
    新しいパスワードを入力してください。
  </p>
  <div class="form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "新しいパスワード" , class:"text" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"text-title" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード再入力" , class:"text" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"text-title" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワード再設定" %>
      </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>